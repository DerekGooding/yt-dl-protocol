<Page
    x:Class="ytdlProtocol.Modern.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ytdlProtocol.Modern.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <ui:TextBlock Text="Protocol status:" Width="150" VerticalAlignment="Center"/>
                <ui:Button Content="Register" Width="150"/>
                <ui:Button Content="Unregister" Width="150"/>
                <ui:Button>
                    <ui:Button.Content>
                        <Image />
                    </ui:Button.Content>
                </ui:Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <ui:TextBlock Text="Executable path:" Width="150" VerticalAlignment="Center"/>
                <ui:TextBox Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <ui:TextBlock Text="Download path:" Width="150" VerticalAlignment="Center"/>
                <ui:TextBox Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <ui:TextBlock Text="Additional args:" Width="150" VerticalAlignment="Center"/>
                <ui:TextBox Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <ui:ToggleSwitch Content="Automatically close the command window when download is finished?"/>
            </StackPanel>

            <DockPanel Margin="0 30 0 0" Width="500" HorizontalAlignment="Left">
                <ui:Button DockPanel.Dock="Left" Margin="50 0 0 0">
                    <ui:Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <ui:TextBlock Text="Save settings"/>
                        </StackPanel>
                    </ui:Button.Content>
                </ui:Button>
                <ui:Button DockPanel.Dock="Right" Margin="0 0 50 0">
                    <ui:Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <ui:TextBlock Text="Bookmarklet guide"/>
                        </StackPanel>
                    </ui:Button.Content>
                </ui:Button>
                <Grid/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
